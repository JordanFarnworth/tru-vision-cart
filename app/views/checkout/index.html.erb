<div class="container">
  <div class="row text-center">
    <div class="col-md-12">
      <h1>Secure Checkout</h1>
      <h5>Your Information is Safe with Encrypted Data Transfer</h5>
    </div>
    <div style="background-color:#FF5233" id="errors" class="col-md-12">

    </div>
  </div>

  <div class="row">
    <div class="col-md-4 text-center">
      <h5>Fast Standard Shipping</h5>
      <br>
      <i class="fa fa-truck fa-2x" ></i>
      3 - 7 Day Shipping (USA)
    </div>
    <div class="col-md-4 text-center">
      <h5>Peace of Mind</h5>
      <img style="height: 75px; width: 100px;" src="https://truevisionweightloss.com/wp-content/uploads/2017/04/041912-nortontrust-100272248-orig.jpg" alt="">
    </div>
    <div class="col-md-4 text-center">
      <h5>Always the Best Price</h5>
      <img style="height: 75px; width: 100px;" src="https://truevisionweightloss.com/wp-content/uploads/2017/04/lowest-price-e1447073917988.png" alt="">
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-6">
      <div class="checkbox">
        <label>Billing details</label>
      </div>
      <%= bootstrap_form_for(@order, label_errors: true, inline_errors: true) do |f| %>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
        <%= f.text_field :company_name %>
        <%= f.text_field :address %>
        <%= f.select :country, countries %>
        <%= f.text_field :state %>
        <%= f.text_field :city %>
        <%= f.text_field :zip, label: 'Zip Code' %>
        <%= f.telephone_field :phone, label: 'Phone Number' %>
        <%= f.email_field :email, label: 'Email Address' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="checkbox">
        <input type="text" id="coupon-code" value=""></input>
        <label><input type="checkbox" id="billing-address" value=""> Ship to a different address?</label>
      </div>
      <div style="hidden" class="billing_address">
        <%= bootstrap_form_for(@billing_address, label_errors: true, inline_errors: true) do |f| %>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
          <%= f.text_field :company_name %>
          <%= f.text_field :address %>
          <%= f.text_field :city %>
          <%= f.text_field :state %>
          <%= f.select :country, countries %>
          <%= f.text_field :zip, label: 'Zip Code' %>
        <% end %>
      </div>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-8">
      <h5>Your Order</h5>
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.name + ' x' + product_quantity(product.sku).to_s %></td>
            <td><%= number_to_currency(product.price * product_quantity(product.sku)) %></td>
          </tr>
          <% end %>
          <tr>
            <td><h5>Subtotal</h5></td>
            <td><h5><%= number_to_currency total %></h5></td>
          </tr>
          <tr>
            <td><h5>Shipping</h5></td>
            <td><h5><%= calculate_shipping %></h5></td>
          </tr>
          <tr>
            <td><h5 id="sales-tax-label"></h5></td>
            <td><h5 id="sales-tax-number">Enter a valid ZIP code to see estimated sales tax</h5></td>
          </tr>
          <tr>
            <tr>
              <td><h5>Total</h5></td>
              <td><h5 id="sales-tax-total"><%= number_to_currency(total + calculate_shipping(:int)) %></h5></td>
            </tr>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-8">
      <h5>Credit Card Information</h5>
      <div class="card-js"></div>
    </div>
  </div>

  <div class="row marginb">
    <div class="col-md-12">
      <br>
      <button id="place-order" class="btn btn-default" type="button" name="button">Place your order!</button>
    </div>
  </div>
</div>
