<div class="containter cart-page">
  <% @errors.each do |error| %>
    <%= "<input class='has-error' type='text' hidden='true' value='#{error}'>".html_safe %>
  <% end %>
  <div class="row header">
    <div class="col-md-6 text-center">
      <img src="https://truevisionweightloss.com/wp-content/uploads/2017/04/truvision-logo-website-independent-1.jpg" alt="">
    </div>
    <div class="col-md-6 text-center">
      Cart page
    </div>
  </div>

  <div class="row text-center">
    <div class="col-md-12">
      <h2>Max 2 Sample Packs per Person (limited supply)</h2>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-2 col-md-8">
      <% if @products.any? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><i class="fa fa-minus-circle fa-2x remove-product" data-sku="<%= product.sku %>" aria-hidden="true"></i></td>
              <td><%= product.name %></td>
              <td><%= number_to_currency product.price %></td>
              <td>
                <select class="form-control quantity-selector" id="sel1">
                  <% [*1..1000].each do |n| %>
                    <%= quantity_select(product_quantity(product.sku), n, product) %>
                  <% end %>
                </select>
              </td>
              <td><%= number_to_currency(product.price * product_quantity(product.sku)) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <div class="text-center">
          <h3>No selected products.</h3>
        </div>
      <% end %>

      <% if @products.any? %>
      <div class="row-fluid">
        <div class="float-right">
          <button class="btn btn-primary checkout-btn" type="button" name="button">Checkout</button>
          <span class="inline">
            <h4>Total: <%= number_to_currency total %></h4>
          </span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
